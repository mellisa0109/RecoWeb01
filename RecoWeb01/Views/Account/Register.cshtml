@using RecoWeb01.Models
@model RegisterViewModel
@{
    ViewBag.Title = "회원가입";
}
<div class="register-body row">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-register", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        <h1 class="h3 mb-3 font-weight-normal">회원가입</h1>
        <hr />
        <h5>중요정보</h5>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(x => x.EmployeeId, new { @class = "form-control", @placeholder = "사번", @autofocus = "autofocus", @required = "required" })
            <div>
                @Html.ValidationMessageFor(x => x.EmployeeId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "암호", @required = "required" })
            <div>
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @type = "password", @placeholder = "암호 확인", @required = "required" })
            <div>
                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <h5>부가정보</h5>
        <div class="form-group">
            @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control", @placeholder = "성명", @required = "required" })
            @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @placeholder = "E-Mail", @required = "required" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @type = "tel", @placeholder = "휴대전화 번호", @required = "required" })
            @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger" })
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">회원가입</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
